
@model CineticaApp.Models.Post

section id="portfolio" class="bg-light-gray">
<div class="container" style="margin-top:120px">
    <div class="row">
        <h3>@Model.Title</h3>
        <h4 class="section-subheading text-muted">@Model.Description</h4>
        <h5 class="section-subheading text-muted">@Model.Tags</h5>
        <div class="col-lg-12 text-center">
            <img src="@Model.ImageLocation" class="img-responsive img-thumbnail" />
        </div>
        <div class="col-lg-12" style="margin-top:20px">
            <p>@Model.Body1</p>
            <p>&nbsp;</p>
            <ul class="list-inline">
                <li>Date: @Model.Date.ToString()</li>
            </ul>
            <button onclick="goBack()" type="button" class="btn btn-primary"><i class="fa fa-times"></i>Back</button>
        </div>
    </div>
</div>


<script>
    function goBack() {
        window.history.back();
    }
</script>
